<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">



    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/my_artist_item_main_cl"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:foreground="?attr/selectableItemBackground"
        >

        <ImageView
            android:layout_width="60dp"
            android:layout_height="60dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:id="@+id/myArtistImageIV"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginStart="20dp"
            >

        </ImageView>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/myArtistNameTV"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toEndOf="@id/myArtistImageIV"
            android:layout_marginStart="20dp"
            tools:text="Sample Artist Name"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:layout_marginTop="20dp"
            >

        </TextView>


        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:id="@+id/myArtistFavoriteIV"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginEnd="70dp"
            android:src="@drawable/baseline_favorite_24"
            >

        </ImageView>



        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:id="@+id/myArtistReOrderIV"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginEnd="20dp"
            android:src="@drawable/baseline_reorder_24"
            >

        </ImageView>




    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
